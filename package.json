{
  "version": "0.0.12",
  "config": {
    "function_name": "TODO-function-name",
    "project": "TODO-project-id",
    "region": "australia-southeast1"
  },
  "scripts": {
    "build": "yarn tsc && yarn tsc -p static && cd static && yarn parcel build static/index.html --dist-dir=../out/static  --public-url ./",
    "postbuild": "cp package.json out/ && cp yarn.lock out/",
    "clear": "rm -rf out .parcel-cache static/build static/dist",
    "preserve": "yarn build",
    "serve": "http-server function/static",
    "gcp-build": "cat /dev/null",
    "predeploy": "yarn build && yarn version --patch",
    "deploy": "gcloud functions deploy ${npm_package_config_function_name} --region=${npm_package_config_region} --project=${npm_package_config_project} --source=out/ --trigger-http --runtime=nodejs22 --memory=256Mi --gen2 --allow-unauthenticated",
    "postdeploy": "echo https://${npm_package_config_region}-${npm_package_config_project}.cloudfunctions.net/${npm_package_config_function_name}/static/index.html"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@material/web": "^2.3.0",
    "express": "^5.1.0",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "http-server": "^14.1.1",
    "parcel": "^2.14.4",
    "typescript": "^5.8.3"
  }
}
